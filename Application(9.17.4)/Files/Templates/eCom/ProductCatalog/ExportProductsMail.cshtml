@using Dynamicweb.Rendering
@using Dynamicweb.Ecommerce.ProductCatalog.Export
@inherits ViewModelTemplate<ExportFileViewModel>

@{
    if (!string.IsNullOrEmpty(Model.Exception))
    {
        <h2>An exception occured when exporting files</h2>
        <div>@Model.Exception</div>
    }
}
<div>
    <p>@Translate("You can download exported products archive from following link.")</p>

    <a href="@Model.DownloadLink" target="_blank">@Model.FileName</a>
</div>
